<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:Idő="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.zoole.myapplication7.AnalogUtasitasok">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bits and Bytes (bitek és byte-ok)"
                style="@style/bekezdes"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="lowByte()"
                style="@style/bekezdes2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/bit1"
                style="@style/szovegtorzs"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="highByte()"
                style="@style/bekezdes2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/bit2"
                style="@style/szovegtorzs"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>


